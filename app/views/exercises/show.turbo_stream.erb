<!-- Exercise data fields to update when exercise dropdown is changed: -->

<%= turbo_stream.replace "exercise_log_sets" do %>
  <%= tag.input type: "number",
      required: "required",
      value: @exercise.default_sets,
      name: "exercise_log[sets]",
      id: "exercise_log_sets",
      class: "form-control" %>
<% end %>

<%= turbo_stream.replace "exercise_log_reps" do %>
  <%= tag.input type: "number", 
      required: "required",
      value: @exercise.default_reps,
      name: "exercise_log[reps]",
      id: "exercise_log_reps",
      class: "form-control" %>
<% end %>

<%= turbo_stream.replace "exercise_log_rep_length" do %>
  <%= tag.input type: "number", 
      required: "required",
      value: @exercise.default_rep_length,
      name: "exercise_log[rep_length]",
      id: "exercise_log_rep_length",
      class: "form-control" %>
<% end %>

<%= turbo_stream.replace "exercise_log_per_side" do %>
  <input name="exercise_log[per_side]" type="hidden" value="0" autocomplete="off">
  <%= tag.input type: "checkbox", 
      value: "1", 
      checked: @exercise.default_per_side,
      name: "exercise_log[per_side]", 
      id: "exercise_log_per_side",
      class: "form-control" %>
<% end %>

<%= turbo_stream.replace "exercise_log_resistance" do %>
  <%= tag.input type: "text",
      value: @exercise.default_resistance,
      name: "exercise_log[resistance]",
      id: "exercise_log_resistance",
      class: "form-control" %>
<% end %>
