<%= form_tag(destination_path, method: 'get', id: 'filter-form' ) do %>
  <div class='row'>
    <div class='col-4'>
      <%= select_tag :body_part_id,
      options_for_select(body_parts.by_name.map { |bp| [bp.name, bp.id] }, params[:body_part_id]),
      include_blank: 'All Body Parts',
      class: 'form-control'
      %>
    </div>

    <div class='col-4'>
      <%= select_tag :timeframe,
      options_for_select(Report::TIMEFRAMES, params[:timeframe]),
      include_blank: 'All Time',
      class: 'form-control'
      %>
    </div>

    <div class='col-2'>
      <button type='submit' class='btn btn-success'>Submit</button>
    </div>

    <div class='col-2'>
      <%= link_to 'Reset', destination_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div> <!-- row -->
<% end %>
<hr>
