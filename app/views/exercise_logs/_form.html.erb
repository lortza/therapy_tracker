<%= form_with(model: exercise_log, local: true, url: url) do |form| %>
  <%= render partial: 'shared/errors', locals: {object: exercise_log} %>

  <div class='field'>
    <%= form.label 'Target Body Part', class: 'required' %>
    <%= form.collection_select :body_part_id,
    current_user.body_parts, :id, :name,
    { include_blank: false },
    class: 'form-control' %>
  </div>

  <div class='field'>
    <%= form.label 'When', class: 'required' %><br>
    <%= form.datetime_select :datetime_occurred, ampm: true, minute_step: 15, value: Date.today, class: 'form-control' %>
  </div>

  <div class='field'>
    <%= form.label 'Exercise', class: 'required' %>
    <%= form.collection_select :exercise_id,
    current_user.exercises.by_name, :id, :name,
    { prompt: '--Select--' },
    class: 'form-control' %>
  </div>

  <div class='form-row'>
    <div class='col'>
      <div class='field'>
        <%= form.label :sets, class: 'required' %>
        <%= form.number_field :sets, class: 'form-control' %>
      </div>
    </div>

    <div class='col'>
      <div class='field'>
        <%= form.label :reps, class: 'required' %>
        <%= form.number_field :reps, class: 'form-control' %>
      </div>
    </div>

    <div class='col'>
      <div class='field'>
        <%= form.label :rep_length, class: 'required' %>
        <%= form.number_field :rep_length, class: 'form-control' %>
      </div>
    </div>

    <div class='col'>
      <div class='field'>
        <%= form.label 'Per Leg?' %>
        <%= form.check_box :per_side, class: 'form-control' %>
      </div>
    </div>
  </div> <!-- row -->

  <div class='field'>
    <%= form.label 'Resistance Level' %>
    <%= form.text_field :resistance, class: 'form-control' %>
  </div>

  <div class='form-row'>
    <div class='col'>
      <div id='burn-set-container' class='field'>
        <%= form.label 'Burn Set #' %>
        <%= form.number_field :burn_set, class: 'form-control' %>
      </div>
    </div>

    <div class='col'>
      <div id='burn-rep-container' class='field'>
        <%= form.label 'Burn Rep #' %>
        <%= form.number_field :burn_rep, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class='field'>
    <%= form.label :progress_note %>
    <%= form.text_area :progress_note, class: 'form-control' %>
  </div>

  <div class='actions mt-3 mb-3'>
    <%= form.submit class: button_class('success') %>
    <%= link_to 'Cancel',@pt_session ? pt_session_path(@pt_session) : exercise_logs_path, class: button_class('primary pull-right') %>
  </div>
<% end %>
