<%= form_tag(reports_path, method: 'get', id: 'filter-form' ) do %>
  <div class='row'>
    <div class='col-4'>
      <%= select_tag :body_part_id,
      options_for_select(@report.body_parts.map { |bp| [bp.name, bp.id] }, params[:body_part_id]),
      include_blank: 'All Body Parts',
      class: 'form-control'
      %>
    </div>

    <div class='col-4'>
      <%= select_tag :timeframe,
      options_for_select([['Past Week',7], ['Past Two Weeks', 14], ['Past Month', 30]], params[:timeframe]),
      include_blank: 'All Time',
      class: 'form-control'
      %>
    </div>

    <div class='col-2'>
      <button type='submit' class='btn btn-success'>Submit</button>
    </div>

    <div class='col-2'>
      <%= link_to 'Reset', reports_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div> <!-- row -->
<% end %>
<hr>
